<h1>All Products:</h1>

<div class="row mt-4">
  <% @products.each do |product| %>
  <div class="col-md-4 mt-3">
    <div class="card">
      <div class="card-body">
        <h5 class="card-title"><%= product["name"] %></h5>
        <p class="card-text"><%= product["description"] %></p>
        <p class="card-text"><%= product["price"] %></p>
        <p class="card-text"><%= product["image_url"] %></p>
        <a href="/client/products/<%= product["id"] %>" class="btn btn-primary">Test it out!</a>
      </div>
    </div>
  </div>
  <% end %>
</div>